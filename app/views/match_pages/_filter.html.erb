<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel"><%= t ".title" %></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= form_with url: "/match", method: :get do |form| %>
            <div class="card">
              <div class="card-header"><%= t ".card_1.header" %></div>
              <div class="card-body">
                <div class="form-check">
                  <%= form.radio_button :gender_choice, Settings.gender.choice_0, class: "form-check-input" %>
                  <%= form.label :gender_choice_0, t(".card_1.choice_0"), class: "form-check-label" %>
                </div>
                <div class="form-check">
                  <%= form.radio_button :gender_choice, Settings.gender.choice_1, class: "form-check-input" %>
                  <%= form.label :gender_choice_1, t(".card_1.choice_1"), class: "form-check-label" %>
                </div>
              </div>
            </div>
            <div class="card">
              <div class="card-header"><%= t ".card_2.header" %></div>
              <div class="card-body">
                <div class="form-check">
                  <%= form.radio_button :age_choice, Settings.age_range_1, class: "form-check-input" %>
                  <%= form.label :age_choice_1, Settings.age_range_1, class: "form-check-label" %>
                </div>
                <div class="form-check">
                  <%= form.radio_button :age_choice, Settings.age_range_2, class: "form-check-input" %>
                  <%= form.label :age_choice_2, Settings.age_range_2, class: "form-check-label" %>
                </div>
                <div class="form-check">
                  <%= form.radio_button :age_choice, Settings.age_range_3, class: "form-check-input" %>
                  <%= form.label :age_choice_3, Settings.age_range_3, class: "form-check-label" %>
                </div>
              </div>
            </div>
            <div class="card">
              <div class="card-header"><%= t ".card_3.header" %></div>
              <div class="card-body">
                <div class="form-check">
                  <%= form.radio_button :place_choice, Settings.place.city_1, class: "form-check-input" %>
                  <%= form.label :place_choice_1, t(".card_3.choice_1"), class: "form-check-label" %>
                </div>
                <div class="form-check">
                  <%= form.radio_button :place_choice, Settings.place.city_2, class: "form-check-input" %>
                  <%= form.label :place_choice_2, t(".card_3.choice_2"), class: "form-check-label" %>
                </div>
                <div class="form-check">
                  <%= form.radio_button :place_choice, Settings.place.city_3, class: "form-check-input" %>
                  <%= form.label :place_choice_3, t(".card_3.choice_3"), class: "form-check-label" %>
                </div>
              </div>
            </div>
            <%= form.submit t(".btn"), class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
