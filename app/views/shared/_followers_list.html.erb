<div class="modal fade" id=<%= "followersModal" + user.id.to_s %> tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><%= " " + user.name + t(".title")  %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <ul class="list-group-flush">
          <% user.followers.each do |fl_er| %>
            <li class="list-group-item"><i class="fa-regular fa-user"></i><%= " " + fl_er.name %></li>
          <% end %>
        </ul>
      </div>
      <div class="modal-footer">
        <%= user.followers.count.to_s + t(".unit") %>
      </div>
    </div>
  </div>
</div>
