<div class="modal fade" id=<%= "followingModal" + user.id.to_s %> tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><%= " " + user.name + t(".title") %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <ul class="list-group-flush">
          <% user.following.each do |u| %>
            <li class="list-group-item">
              <div class="d-flex">
                <i class="fa-regular fa-user p-2"></i>&nbsp;
                <div class = "p-2">
                  <%= u.name %>
                </div>
                <div class="ml-auto p-2">
                <% if params[:action] == "show" && user.gold? %>
                  <%= render "users/unfollow", user: u %>
                <% end %>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="modal-footer">
        <%= t(".prefix") + user.following.count.to_s %>
      </div>
    </div>
  </div>
</div>
