<div class="modal fade" id=<%= "userModal" + user.id.to_s %> tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">
          <% if user.confirmed? %>
            <%= user.name %> <i class="fa-solid fa-user-check"></i>
          <% else %>
            <%= user.name %> <i class="fa-solid fa-user-xmark"></i>
          <% end %>
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <ul class="list-group-flush">
          <li class="list-group-item"><i class="fa-solid fa-cake-candles"></i> : <%= user.date_of_birth %></li>
          <li class="list-group-item"><i class="fa-solid fa-venus-mars"></i> : <%= user.gender %></li>
          <li class="list-group-item"><i class="fa-solid fa-at"></i> : <%= user.email %></li>
          <li class="list-group-item"><i class="fa-brands fa-facebook-f"></i> : <%= user.facebook %></li>
          <li class="list-group-item"><i class="fa-solid fa-phone"></i> : <%= user.phone %></li>
          <li class="list-group-item"><i class="fa-regular fa-clipboard"></i> : <%= user.description %></li>
          <li class="list-group-item"><i class="fa-solid fa-city"></i> : <%= user.country.name %></li>
        </ul>
      </div>
      <div class="modal-footer">
        <%= user.followers.count.to_s + " followers, following " + user.following.count.to_s %>
      </div>
    </div>
  </div>
</div>
